# CER-Telemetry Environment Configuration
# Copy this file to .env and fill in your values

# ===========================
# API Configuration
# ===========================

# MoltX API token (required)
# Get this from your MoltX dashboard
MOLTX_API_TOKEN=your_api_token_here

# MoltX API base URL (optional, has default)
MOLTX_API_URL=https://api.moltx.example.com

# Path to token file (optional, fallback if MOLTX_API_TOKEN not set)
# MOLTX_TOKEN_FILE=./moltx.txt

# ===========================
# Logging Configuration
# ===========================

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Log file path (optional, logs to stdout if not set)
# LOG_FILE=/var/log/cer-telemetry/app.log

# ===========================
# Environment
# ===========================

# Environment: development, staging, production
NODE_ENV=development

# ===========================
# Advanced Configuration
# ===========================

# Maximum samples to fetch (optional, overrides config)
# MAX_SAMPLES=10000

# Minimum sample size (optional, overrides config)
# MIN_SAMPLE_SIZE=100

# Enable/disable PII detection (optional, overrides config)
# ENABLE_PII_DETECTION=true

# Fail on invariant violations (optional, overrides config)
# FAIL_ON_VIOLATION=true
